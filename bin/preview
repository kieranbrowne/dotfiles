#!/usr/bin/env python
from turtle import *
from time import sleep
import fileinput
import sys

def setup():
    screensize(600,600)
    setworldcoordinates(0,150,150,0)
    color('black', 'white')
    hideturtle()
    speed(0)
    delay(0)

def draw(lines):
    for line in lines:
        if not process(line):
            print "file does not contain the approriate data"
            break

def process(line):
    try:
        coords = line.split(' ')
        x = float( coords[0] )
        y = float( coords[1] )
        d = int  ( coords[2] )

        if d == 0:
            penup()
        else:
            pendown()

        setpos(x,y)
        return True
    except:
        return False


# -- main
if len(sys.argv) > 1:
    setup()
    draw(fileinput.input())
    sleep(2)

