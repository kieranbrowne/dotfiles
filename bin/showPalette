#!/usr/bin/env python
import sys
import re
import pygame
import pygame.gfxdraw



pygame.init()

size = [300,200]
screen = pygame.display.set_mode(size,pygame.NOFRAME)
screen.fill((255,255,255))

def readPalette(str):
    palette = []
    for colour in str.split(','):
        haskellColour = re.search('RGB (\d*) (\d*) (\d*)',colour)
        v = haskellColour
        colour = (int(v.group(1)),int(v.group(2)),int(v.group(3)))
        palette.append(colour)
    return palette
        




def drawPalette(palette):
    for col in palette:
        y = size[1]/2
        x = size[0]/(len(palette)+1) * (palette.index(col)+1)
        try:
            pygame.gfxdraw.aacircle(screen, x,y, 30, col)
            pygame.gfxdraw.filled_circle(screen, x,y, 30, col)
        except:
            pygame.draw.circle(screen, col,[x,y],30,0)

    pygame.display.flip()

for line in sys.stdin:
    drawPalette(readPalette(line))
    # sys.stdout.write(line)

running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT or event.type == pygame.KEYDOWN or event.type == pygame.MOUSEBUTTONDOWN:
            running = False
