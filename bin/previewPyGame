def process(line):
    x,y,d = 0,0,0
    try:
        coords = line.split(' ')
        x = float( coords[0] )
        y = float( coords[1] )
        d = int  ( coords[2] )
    except:
        print "Error"
    return x,y,d

def drawData(data):
    pygame.draw.lines(screen,black,False,[(0,0),(600,600)],1)

def remap(x, inMin,inMax,outMin,outMax):
    #range check
    if inMin == inMax or outMin == outMax:
        print "Range error"
        return None
    result = ((x - inMin) / (inMax - inMin)) * (outMax - outMin) + outMin
    return result   



#colours
black = (0,0,0)
white = (255,255,255)

#setup screen
screenSize = (600,600)
screen = pygame.display.set_mode(screenSize)
screen.fill(white)
pygame.draw.lines(screen,black,False,[(0,0),(600,600)],1)

#if file contains appropriate data
if len(sys.argv) > 1:
    #read data
    instructions = getData(fileinput.input())
    #draw data
    drawData(instructions);


#main loop
while(True):
    pygame.display.update()
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
             pygame.quit(); sys.exit();
